{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npx tsc && pm2 start ecosystem.config.json --no-daemon",
    "start:ts": "ts-node -r tsconfig-paths/register src/index.ts",
    "tsc": "tsc --watch",
    "kill-server": "pm2 kill",
    "start:prod": "node -r module-alias/register ./dist/index.js",
    "start:dev": "npx prisma migrate reset && npx prisma db push && ts-node-dev --respawn --transpile-only --exit-child -r tsconfig-paths/register src/index.ts",
    "start:restart-dev": "ts-node-dev --respawn --transpile-only --exit-child -r tsconfig-paths/register src/index.ts",
    "dev": "npx tsc && cross-env NODE_ENV=development nodemon -r tsconfig-paths/register src/index.ts",
    "build:docker": "docker compose up -d",
    "db:migrate": "npx prisma migrate dev --name $MIGRATION_NAME --create-only && yarn prisma generate",
    "db:push": "npx prisma db push",
    "db:studio": "npx prisma studio",
    "build": "tsc",
    "docker:build": "docker-compose build",
    "docker:start": "docker-compose up",
    "docker:prun": "docker volume prune",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:down": "docker-compose down",
    "docker:up": "docker-compose up -d",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:prisma:migrate": "docker-compose exec app yarn prisma migrate deploy",
    "docker:prisma:studio": "docker-compose exec app yarn prisma studio"
  },
  "_moduleAliases": {
    "@": ".",
    "@configs": "dist/configs",
    "@helpers": "dist/helpers",
    "@controllers": "dist/controllers",
    "@routes": "dist/routes",
    "@utils": "dist/utils",
    "@middlewares": "dist/middlewares",
    "@services": "dist/services",
    "@dao": "dist/dao",
    "@models": "dist/models",
    "@validators": "dist/validators",
    "@types": "dist/types"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.3.1",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.5.1",
    "axios": "^1.7.5",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "ethers": "5.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "http-status": "^1.7.4",
    "ioredis": "^5.4.2",
    "joi": "^17.13.3",
    "mailgen": "^2.0.28",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.14",
    "nodemon": "^3.1.4",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pm2": "^5.4.2",
    "prisma": "6.3.1",
    "socket.io": "^4.8.1",
    "thirdweb": "^5.49.0",
    "winston": "^3.14.2",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/module-alias": "^2.0.4",
    "@types/node-cron": "^3.0.11",
    "@types/passport": "^1.0.16",
    "@types/passport-jwt": "^4.0.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.4"
  }
}
